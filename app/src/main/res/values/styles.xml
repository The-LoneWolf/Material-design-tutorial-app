<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
    </style>

    <style name="MyButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/material_indigo_500</item>
        <item name="colorButtonNormal">@color/material_pink_500</item>
        <item name="android:textColor">@color/material_light_white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyButton2" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/material_pink_500</item>
    </style>

    <style name="MyFloatingButton" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/material_pink_500</item>
    </style>

    <style name="MyCardViewStyle" parent="Theme.AppCompat">
        <item name="cardCornerRadius">2dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardBackgroundColor">@color/material_indigo_500</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/material_pink_500</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:windowBackground">@drawable/alert_dialog_drawable</item>
    </style>

    <style name="BottomNavigation">
        <item name="android:background">@color/material_grey_200</item>
        <item name="itemBackground">@drawable/bottom_nav_item_bg</item>
        <item name="itemIconTint">@drawable/bottom_nav_item_tint</item>
        <item name="itemTextColor">@color/material_grey_700</item>
        <item name="paddingStart">8dp</item>
        <item name="paddingEnd">8dp</item>
    </style>

</resources>
